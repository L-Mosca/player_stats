<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Lol_app" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_600</item>

        <item name="android:textViewStyle">@style/Base.MaterialTextView</item>
        <item name="materialCardViewStyle">@style/Base.MaterialCard</item>
        <item name="buttonStyle">@style/Base.ButtonStyle</item>
        <item name="textInputStyle">@style/Base.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Base.BottomNavigation</item>
    </style>

    <style name="Theme.Lol_app" parent="Base.Theme.Lol_app" />

    <style name="Base.MaterialTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gold_200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/blue_500</item>
        <item name="android:elevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:strokeColor">@color/blue_700</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Base.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_default_background</item>
    </style>

    <style name="Base.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="startIconTint">@color/gold_500</item>
        <item name="endIconTint">@color/gold_500</item>
        <item name="android:textColorHint">@color/gold_700</item>
        <item name="boxStrokeColor">@color/blue_500</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="Base.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/Base.ActiveIndicator</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Base.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">@android:color/transparent</item>
    </style>
</resources>